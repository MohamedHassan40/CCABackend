# Database (required)
DATABASE_URL=postgresql://postgres:password@localhost:5432/cloud_org?schema=public

# Auth (required â€“ min 32 chars for JWT_SECRET)
JWT_SECRET=your-very-secret-key-min-32-characters-long
JWT_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# URLs & CORS (for frontend / production)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Optional: Email (SendGrid)
# SENDGRID_API_KEY=
# SENDGRID_FROM_EMAIL=

# Optional: Payments (Moyasar)
# MOYASAR_PUBLISHABLE_KEY=
# MOYASAR_SECRET_KEY=
# MOYASAR_WEBHOOK_SECRET=

# Optional: Sentry
# SENTRY_DSN=

# Optional: Redis
# REDIS_URL=redis://localhost:6379

# Optional: Storage (local | s3 | gcs | cloudinary)
# STORAGE_TYPE=local
# UPLOAD_DIR=./uploads
